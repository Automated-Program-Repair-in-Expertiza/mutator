  def action_allowed?
    if (params[:action] || (params[:action] == "update"))
      assignment = Assignment.find(params[:id])
      if ["Super-Administrator", "Administrator"].include?(current_role_name)
        return true
      end
      if (assignment.instructor_id == current_user.id)
        return true
      end
      if (TaMapping.exists?(ta_id: current_user.id, course_id: assignment.course_id) && TaMapping.where(course_id: assignment.course_id).include?(TaMapping.where(ta_id: current_user.id, course_id: assignment.course_id).first))
        return true
      end
      if (assignment.course_id && (Course.find(assignment.course_id).instructor_id == current_user.id))
        return true
      end
      return false
    else
      ["Super-Administrator", "Administrator", "Instructor", "Teaching Assistant"].include?(current_role_name)
    end
  end
